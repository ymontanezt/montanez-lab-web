rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Funciones helper
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'super_admin';
    }
    // Reglas para contactos (formularios de contacto)
    match /contacts/{contactId} {
      allow create: if request.auth == null || request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para citas
    match /appointments/{appointmentId} {
      allow create: if request.auth == null || request.auth != null;
      allow read: if request.auth != null && (
        request.auth.token.admin == true || 
        request.auth.uid == resource.data.userId
      );
      allow update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para usuarios
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para administradores
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() && (
        // Los super_admin solo pueden ser modificados por otros super_admin
        resource.data.role != 'super_admin' || isSuperAdmin()
      );
      allow delete: if isSuperAdmin() && resource.data.role != 'super_admin';
    }
    
    // Reglas para configuración del sitio
    match /site-config/{configId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para testimonios
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para galería
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para servicios
    match /services/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para equipo
    match /team/{memberId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para estadísticas
    match /stats/{statId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para logs de auditoría
    match /audit-logs/{logId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para health checks
    match /_health/{docId} {
      allow read, write: if true;
    }
  }
}
